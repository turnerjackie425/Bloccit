<%= form_for @question do |f| %>
   <%= f.label :title %>
   <%= f.text_field :title %>
 
   <%= f.label :body %>
   <%= f.text_area :body %>

   <%= f.check_box(:resolved, checked_value = "1", unchecked_value = "0") %>
 
   <%= f.submit "Save" %>
 <% end %>






